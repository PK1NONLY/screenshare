{
  "manifest_version": 2,
  "name": "Secure Testing Environment (Firefox)",
  "version": "1.0.0",
  "description": "Comprehensive security extension for examination environments with monitoring and restriction capabilities - Firefox Edition",
  
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "commands",
    "webNavigation",
    "webRequest",
    "webRequestBlocking",
    "notifications",
    "sessions",
    "topSites",
    "management",
    "privacy",
    "<all_urls>"
  ],
  
  "background": {
    "scripts": [
      "utils/logger.js",
      "utils/api-client.js", 
      "background/config-manager.js",
      "background/system-monitor.js",
      "background/service-worker.js"
    ],
    "persistent": false
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "utils/logger.js",
        "content/security-enforcer.js",
        "content/keyboard-tracker.js",
        "content/page-monitor.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_title": "Secure Testing Environment (Firefox)",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    "api/integration-api.js",
    "admin/admin.html",
    "admin/admin.js",
    "admin/admin.css"
  ],
  
  "content_security_policy": "script-src 'self'; object-src 'self'",

  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+Shift+E"
      },
      "description": "Open Secure Testing Environment"
    },
    "emergency_stop": {
      "suggested_key": {
        "default": "Ctrl+Shift+X",
        "mac": "Command+Shift+X"
      },
      "description": "Emergency stop monitoring"
    }
  },

  "applications": {
    "gecko": {
      "id": "secure-testing-environment@firefox.addon",
      "strict_min_version": "57.0"
    }
  }
}