{
  "manifest_version": 3,
  "name": "Secure Testing Environment",
  "version": "1.0.0",
  "description": "Comprehensive security extension for examination environments with monitoring and restriction capabilities",
  
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "system.cpu",
    "system.memory",
    "system.storage",
    "system.display",
    "background",
    "scripting",
    "webNavigation",
    "webRequest",
    "webRequestBlocking",
    "desktopCapture",
    "notifications",
    "power",
    "processes",
    "sessions",
    "topSites",
    "management",
    "privacy",
    "contentSettings",
    "debugger"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "utils/logger.js",
        "content/security-enforcer.js",
        "content/keyboard-tracker.js",
        "content/page-monitor.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Secure Testing Environment",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "api/integration-api.js",
        "admin/admin.html",
        "admin/admin.js",
        "admin/admin.css"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  
  "externally_connectable": {
    "matches": ["<all_urls>"]
  },
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}